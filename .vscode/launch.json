{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "api-server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["mythme.api.main:app", "--app-dir=src"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "cli",
      "type": "debugpy",
      "request": "launch",
      "program": "src/mythme/__main__.py",
      "args": ["--version"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
